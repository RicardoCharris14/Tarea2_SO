{
    "version": "2.0.0",
    "tasks": [
      {
        "label": "Compilar C++",
        "type": "shell",
        "command": "g++",
        "args": [
          "${file}",
          "-o",
          "${fileDirname}/${fileBasenameNoExtension}",
          "-pthread"
        ],
        "group": {
          "kind": "build",
          "isDefault": true
        },
        "problemMatcher": ["$gcc"],
        "detail": "Compila un archivo C++ usando g++."
      },
      {
        "label": "Ejecutar C++",
        "type": "shell",
        "command": "${fileDirname}/${fileBasenameNoExtension}",
        "group": {
          "kind": "test",
          "isDefault": true
        },
        "detail": "Ejecuta el programa compilado."
      }
    ]
  }
  